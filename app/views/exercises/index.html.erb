<h1>Listing exercises</h1>

<table class="scaffold-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.title %></td>
        <td><%= exercise.content %></td>
        <% if can? :show, exercise %>
           <td><%= link_to 'Show', exercise %></td>
        <% end %>
        <% if can? :edit, exercise %>
            <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <% end %>
        <% if can? :destroy, exercise %>
            <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<% if can? :create, Exercise %>
    <li><%= link_to 'New Exercise', new_exercise_path %></li>
<% end %>
